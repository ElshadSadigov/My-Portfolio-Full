@model List<Setting>
@{
    ViewData["Title"] = "Index";
}

<div>
    <!-- ==================================================================================== -->
    <!-- ==================================================================================== -->
    <!-- ==================================================================================== -->

    <div class="mx-3">

        <div style="display:flex; justify-content:space-between; align-items:center">

            <div>
                <h1><strong>Settings</strong></h1>
            </div>
            <div>

                @* <a asp-action="create" asp-controller="cv">
                <button class=" btn btn-info">
                <i class="bi bi-pencil-square"></i>
                Create
                </button>
                </a>*@
            </div>

        </div>

        <div>
            <table class="table">
                <thead>
                    <tr>

                        <th scope="col">Key</th>
                        <th scope="col">Value</th>
                        <th scope="col">Action</th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {


                        <tr>


                            <td class="text-warning">@item.Key</td>
                            <td class="text-info">@item.Value</td>


                            <td>
                                <div>
                                    <div>
                                        <a asp-action="update" asp-controller="setting" asp-route-id="@item.Id">
                                            <button class="btn btn-primary">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                        </a>
                                      
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>
    <!-- ==================================================================================== -->
    <!-- ==================================================================================== -->
    <!-- ==================================================================================== -->





</div>


