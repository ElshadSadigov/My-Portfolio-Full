@model Setting
@{
    ViewData["Title"] = "Update";
}

<h1 style="margin-left:40px">Update settings</h1>
<div class="mx-5">
	<form method="post" asp-action="update" enctype="multipart/form-data">


		<div class="row">
			<div class="mb-3 col-md-12">
				<label asp-for="Key" class="form-label">Key</label>
				<input class="form-control text-warning" asp-for="Key">
				<span asp-validation-for="Key" class="text-danger"></span>
			</div>
		</div>

		<div class="row">
			<div class="mb-3 col-md-12">
				<label asp-for="Value" class="form-label">Value</label>
				<textarea asp-for="Value" cols="30" rows="10" class="form-control text-info" > </textarea>
				<span asp-validation-for="Value" class="text-danger"></span>
			</div>
		</div>

		<button type="submit" class="btn btn-primary" style="margin-top:30px;margin-bottom:30px">Update</button>
	</form>
</div>



