@model HardSkills
@{
    ViewData["Title"] = "Update";
}

<h1>Update Hard Skill</h1>

<form method="post" asp-action="update" enctype="multipart/form-data">
	<div class="container">

		<div class="row">
			<div class="col-md-8">
				<label asp-for="skill" class="form-label">Skill</label>
				<input asp-for="skill" class="form-control">
				<span class="text-danger" asp-validation-for="skill"></span>
			</div>
			<div class="col-md-4">
				<label asp-for="skill" class="form-label">Type</label>
				<select asp-for="TypeId" class="form-select">
					@foreach (SkillType item in ViewBag.type)
					{
							<option value="@item.Id">@item.Type</option>
					}
				</select>
			</div>

		</div>

		<div class="d-flex justify-content-center " style="margin-top:10px">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>

	</div>


</form>

