@model List<AboutImage>
@{
    ViewData["Title"] = "Index";
}

<Div class="container">


    <div>
    <!-- ==================================================================================== -->
    <!-- ==================================================================================== -->
    <!-- ==================================================================================== -->

    <div class="mx-3">

        <div style="display:flex; justify-content:space-between; align-items:center">

            <div>
                <h1>About <strong>Image</strong></h1>
            </div>


            <div>
                  @*  <a asp-action="create" asp-controller="aboutimage">
                    <button class=" btn btn-info">
                        <i class="bi bi-pencil-square"></i>
                        Create
                    </button>
                </a>*@
            </div>

        </div>

        <div>
            <table class="table">
                <thead>
                    <tr>
                        
                        <th scope="col">Image</th>
                      
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        

                         <tr>
                       
                        <td>
                                <img style="width:300px;height:300px;margin-top:15px" src="~/uploads/about/@item.Images" />
                        </td>
                        
                        <td>
                            <div>
                                <div>
                                    <a asp-action="update" asp-controller="aboutimage" asp-route-id="@item.Id">
                                        <button class="btn btn-primary">
                                            <i class="bi bi-pencil-square"></i>

                                        </button>
                                    </a>
                                     
                                </div>
                            </div>
                        </td>
                    </tr>
                    }
               


                </tbody>
            </table>
        </div>
    </div>
    <!-- ==================================================================================== -->
    <!-- ==================================================================================== -->
    <!-- ==================================================================================== -->





</div>


</Div>
