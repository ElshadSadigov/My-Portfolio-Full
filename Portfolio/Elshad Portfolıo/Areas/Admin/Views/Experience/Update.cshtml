@model Experience
@{
    ViewData["Title"] = "Update";
}
<div class="container">

	<h1>Update a Experence</h1>

</div>

<form method="post" asp-action="update" enctype="multipart/form-data">
	<div class="container">

		<div class="row">
			<div class="col-md-3">
				<label asp-for="CompanyName" class="form-label">Company Name</label>
				<input asp-for="CompanyName" class="form-control">
				<span class="text-danger" asp-validation-for="CompanyName"></span>
			</div>
			<div class="col-md-3">
				<label asp-for="CompanyLink" class="form-label">Company Link</label>
				<input asp-for="CompanyLink" class="form-control">
				<span class="text-danger" asp-validation-for="CompanyLink"></span>
			</div>
			<div class="col-md-3">
				<label asp-for="Position" class="form-label">Position</label>
				<input asp-for="Position" class="form-control">
				<span class="text-danger" asp-validation-for="Position"></span>
			</div>
			<div class="col-md-3">
				<label asp-for="Order" class="form-label">Order</label>
				<input asp-for="Order" class="form-control">
				<span class="text-danger" asp-validation-for="Order"></span>
			</div>

		</div>
		<div class="row">
			<div class="col-md-6">
				<label asp-for="Accessdate" class="form-label">Access date</label>
				<input asp-for="Accessdate" class="form-control">
				<span class="text-danger" asp-validation-for="Accessdate"></span>
			</div>
			<div class="col-md-6">
				<label asp-for="Releasedate" class="form-label">Release date</label>
				<input asp-for="Releasedate" class="form-control">
				<span class="text-danger" asp-validation-for="Releasedate"></span>
			</div>

		</div>
		<diw class="row">
			<div class="col-md-12">
				<label asp-for="ImageFile" class="form-label">Image</label>
				<input asp-for="ImageFile" class="form-control">
				<span class="text-danger" asp-validation-for="ImageFile"></span>
			</div>
		</diw>

		<div class="d-flex justify-content-center " style="margin-top:10px">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>

	</div>


</form>
